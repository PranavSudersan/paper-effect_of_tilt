\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{net}\left(n\right)=\stackrel[i=1]{n}{\sum}k_{h}\left(l_{h,i}-l_{h,0}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
This can be simplified into:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
F_{net}\left(n\right)=nf_{p}-\frac{n\left(n-1\right)}{2}k_{h}w\sin\theta & \qquad & n\geq N_{t}\label{eq:seq_detach}
\end{eqnarray}

\end_inset


