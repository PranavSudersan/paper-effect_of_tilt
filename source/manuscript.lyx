\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
N_{c}=\frac{f_{p}}{k_{h}w\sin\theta}-\frac{k_{b}}{k_{h}}+1\label{eq:prop_nc}
\end{equation}

\end_inset


